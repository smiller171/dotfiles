[init]
templatedir = ~/.git_template
	defaultBranch = master
[core]
	editor = nano
[user]
	email = scott@millergeek.xyz
	name = Scott Miller
[commit]
	gpgSign = true
[pull]
	rebase = true
[push]
	default = current
	followTags = true
	gpgSign = if-asked
[tag]
	gpgSign = true
[gpg]
	format = ssh
[gpg "ssh"]
	defaultKeyCommand = sh -c 'echo key::$(ssh-add -L)'
